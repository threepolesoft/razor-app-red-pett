@code {

    private string ModalClassAddProject { get; set; } = "footer-link";
    private string ModalClassProject { get; set; } = "footer-link";
    private string ModalClassHome { get; set; } = "footer-link";
    private string ModalClassSetting { get; set; } = "footer-link";

    protected async override Task OnInitializedAsync()
    {
        NavigationManager.LocationChanged += LocationChanged;
    }

    private async void LocationChanged(object sender, LocationChangedEventArgs e)
    {
        var str = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);

        if (str == "Home")
        {
            ModalClassHome = "footer-link active";
            ModalClassProject = "footer-link";
            ModalClassAddProject = "footer-link";
            ModalClassSetting = "footer-link";
        }
        else if (str == "add_project_step_1" || str == "add_project_step_2" || str == "add_project_step_3")
        {
            ModalClassHome = "footer-link";
            ModalClassProject = "footer-link";
            ModalClassAddProject = "footer-link active";
            ModalClassSetting = "footer-link";
        }
        else if (str == "Projects")
        {
            ModalClassHome = "footer-link";
            ModalClassProject = "footer-link active";
            ModalClassAddProject = "footer-link";
            ModalClassSetting = "footer-link";
        }
        else if (str == "")
        {
            ModalClassHome = "footer-link";
            ModalClassProject = "footer-link";
            ModalClassAddProject = "footer-link";
            ModalClassSetting = "footer-link active";
        }
        await InvokeAsync(StateHasChanged);
    }
}
